{
	"manifest_version": 2,
	"version": "2.0",
	"name": "xkcd Hover Text",
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"http://xkcd.com/*",
				"http://xkcd.org/*",
				"http://www.xkcd.com/*",
				"http://www.xkcd.org/*"
			],
			"js": [
				"scripts/shared.js",
				"scripts/content_script.js"
			],
			"run_at": "document_end"
		}
	],
	"options_page": "options_page.html"
}
